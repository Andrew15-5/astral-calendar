    {{> calendar calendar}}
    <div class="right">
      <h3 class="report-period">Отчётность за {{month}}.{{year}}</h3>
      <ol class="report-list">
        {{#each reports}} {{> report}} {{/each}}
      </ol>
    </div>
  </div>
  {{/ calendar_container}} {{/ body_container}}
</html>
