<!DOCTYPE html>
<html lang="en">
  {{> head title="Календарь"}}
  <body>
    {{#> calendar_container}}
    <div class="try-horizontal-flex">
      {{> calendar calendar}}
      <div class="right-item">
        <h3 class="report-period">Отчётность за {{month}} {{year}} г.</h3>
        <ol class="event-list">
          {{#each events}} {{> event}} {{/each}}
        </ol>
      </div>
    </div>
    {{/ calendar_container}}
    <script type="text/javascript" src="/static/js/month.js"></script>
  </body>
</html>
